<style>
  img
  {
    width: 100%;
    margin: 30px 0;
  }

  .area-break h1
  {
    margin: 30px 0;
    padding-left: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #ccc;
  }

  h2
  {
    margin: 30px 0;
  }

  a
  {
    color: #000;
    text-decoration: underline;
    transition: .2s;
  }

  a:hover
  {
    color: #ccc;
    text-decoration: none;
  }

  ul
  {
    padding-left: 15px;
  }
</style>
<div class="blog-wrapper container">
  <h1 class="profile-heading"><span><%= @blog.title %></span></h1>
  <div class="row">
    <div class="blogs-back-content col-md-9 mx-auto area-break">
      <div class="blogs-back-area">
        <%= link_to blogs_path, class: 'text-center blogs-back-btn' do %>
          <i class="fas fa-arrow-left"></i>
        <% end %>
      </div>
      <div class="text-right">
        <span class="mr-3"><i class="fas fa-eye"></i> <%= @blog.viewer.to_s(:delimited) %> views</span>
        <% if @blog.is_publish? %>
          <span class="badge badge-success">公開中</span>
        <% else %>
          <span class="badge badge-warning">未公開</span>
        <% end %>
        <%= @blog.published_on.try(:strftime, '%y年%m月%d日') %>
      </div>
      <% @blog.tag_list.each do |tag| %>
        <span class="badge badge-dark"><%= tag %></span>
      <% end %>
      <div id="social-share-button-wrapper">
        <%= social_share_button_tag(@blog.title) %>
      </div>
      <div class="area-break mb-5">
        <%= markdown(@blog.content).html_safe %>
      </div>
      <div class="row mb-5">
        <div class="col-md-12">
          <%= form_with model: Comment.new, url: blog_comment_path(@blog), local: true do |form| %>
            <div class="form-group">
              <%= form.label 'お名前 (必須)' %>
              <%= form.text_field :author, class: 'form-control comment-form-control' %>
            </div>
            <div class="form-group">
              <%= form.label 'コメント (必須)' %>
              <%= form.text_area :content, class: 'form-control comment-form-control' %>
            </div>
            <%= form.submit 'コメントする', class: 'btn btn-dark btn-lg' %>
          <% end %>
        </div>
      </div>
      <% @blog.comments.each do |comment| %>
        <div class="row">
          <div class="col-md-12">
            <div class="comment-wrapper">
              <div class="clearfix">
                <span class="float-left comment-author"><%= comment.author %></span>
                <span class="float-right commented-at"><%= comment.created_at.strftime("%y%m%d %H:%M") %></span>
              </div>
              <div class="arrow_box">
                <%= comment.content %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= link_to '一覧へ戻る', blogs_path, class: 'btn btn-secondary' %>
      <% if current_user.try(:admin?) %>
        <%= link_to '編集する', edit_blog_path(@blog), class: 'btn btn-dark' %>
        <%= link_to '削除する', blog_path(@blog), class: 'btn btn-danger', method: :delete, data: { confirm: '一度行った処理は戻せません。本当に削除しますか？' } %>
      <% end %>
    </div>
  </div>
</div>
